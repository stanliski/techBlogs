<% layout( 'admin-layout' ) -%>
    <div class="admin-content">

      <div class="am-cf am-padding">
        <div class="am-fl am-cf">
          <strong class="am-text-primary am-text-lg">博客管理</strong> / <small>Table</small>
        </div>
      </div>

      <div class="am-g">
        <div class="am-u-sm-12 am-u-md-6">
          <div class="am-btn-toolbar">
            <div class="am-btn-group am-btn-group-xs">
              <button type="button" class="am-btn am-btn-default" id="write-blog-btn">
                <span class="am-icon-plus"></span> 新增
              </button>
              <button type="button" class="am-btn am-btn-default">
                <span class="am-icon-save"></span> 发布
              </button>
              <button type="button" class="am-btn am-btn-default">
                <span class="am-icon-archive"></span> 审核
              </button>
              <button type="button" class="am-btn am-btn-default"
                data-am-modal="{target: '#del-alert'}">
                <span class="am-icon-trash-o"></span> 删除
              </button>
            </div>
          </div>
        </div>
        <div class="am-u-sm-12 am-u-md-3">
          <div class="am-form-group">
            <select data-am-selected="{btnSize: 'sm'}">
            <% groups.forEach( function ( group ){ %>
              <option value="group._id"><%=group.title%></option>
           	<% }); %>
            </select>
          </div>
        </div>
        <div class="am-u-sm-12 am-u-md-3">
          <div class="am-input-group am-input-group-sm">
            <input type="text" class="am-form-field"> <span
              class="am-input-group-btn">
              <button class="am-btn am-btn-default" type="button">搜索</button>
            </span>
          </div>
        </div>
      </div>

      <div class="am-g">
        <div class="am-u-sm-12">
          <table class="am-table am-table-striped am-table-hover table-main">
            <thead>
              <tr>
                <th class="table-check"><input type="checkbox" /></th>
                <th class="table-id">ID</th>
                <th class="table-title">标题</th>
                <th class="table-type">类别</th>
                <th class="table-set">操作</th>
              </tr>
            </thead>
            <tbody id="blog-list">
             <% blogs.forEach( function ( blog ){ %>
            	<tr>
            		<td>
            			<input type="checkbox">
            		</td>
            		<td>1</td>
            		<td>
            			<a href="/admin/get?id=<%= blog._id %>"><%= blog.title %></a>
            		</td>
            		<td>
            			<%= blog.group.title %>
            		</td>
            		<td>
            			<div class="am-btn-toolbar" id="<%= blog._id %>" >
	            			<div class="am-btn-group am-btn-group-xs">
		            			<button class="am-btn am-btn-default am-btn-xs am-text-secondary" data-am-modal="{target: '#edit-alert'}">
		            				<span class="am-icon-pencil-square-o"></span>编辑</button>
		            			<button class="am-btn am-btn-default am-btn-xs am-hide-sm-only">
		            				<span class="am-icon-copy"></span> 预览 </button>
		            			<button class="am-btn am-btn-default am-btn-xs am-text-danger am-hide-sm-only" data-am-modal="{target: '#del-alert'}"><span class="am-icon-trash-o">
		            				</span>删除</button>
	            			</div>
            			</div>
            		</td>
            	</tr>
            <% }); %>
            </tbody>
          </table>
          <div class="am-cf">
            共 15 条记录
            <div class="am-fr">
              <ul class="am-pagination">
                <li class="am-disabled"><a href="#">«</a></li>
                <li class="am-active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">»</a></li>
              </ul>
            </div>
          </div>
          <hr />
          <p>注：.....</p>
        </div>

      </div>
    </div>
    
    <!-- Modal -->


	<div class="am-modal am-modal-confirm" tabindex="-1" id="del-alert">
	  <div class="am-modal-dialog">
	    <div class="am-modal-hd">Blog Admin</div>
	    <div class="am-modal-bd">
	      你，确定要删除这条记录吗？
	    </div>
	    <div class="am-modal-footer">
	      <span class="am-modal-btn" data-am-modal-cancel>取消</span>
	      <span class="am-modal-btn" id="del-blog-btn" data-am-modal-confirm>确定</span>
	    </div>
	  </div>
	</div>
	
	<div class="am-modal am-modal-confirm" tabindex="-1" id="edit-alert">
	  <div class="am-modal-dialog">
	    <div class="am-modal-hd">Blog Admin</div>
	    <div class="am-modal-bd">
	      你，确定要编辑这条记录吗？
	    </div>
	    <div class="am-modal-footer">
	      <span class="am-modal-btn" data-am-modal-cancel>取消</span>
	      <span class="am-modal-btn" id="edit-blog-btn" data-am-modal-confirm>确定</span>
	    </div>
	  </div>
	</div>


